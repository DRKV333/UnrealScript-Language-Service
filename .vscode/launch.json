{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "antlr-debug",
            "request": "launch",
            "name": "Antlr UC Grammar",
			"input": "grammars/examples/Classes/Gamma.uc",
			"grammar": "grammars/UCParser.g4",
            "startRule": "program",
			"visualParseTree": true
        },
		{
			"type": "antlr-debug",
            "request": "launch",
            "name": "Antlr UC Macro",
			"input": "grammars/examples/macro.uci",
			"grammar": "grammars/UCPreprocessorParser.g4",
			"startRule": "macroProgram",
			"debugServer": 6020,
			"trace": true,
			"visualParseTree": true
        },
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Extension",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/out/extension.js"],
            "stopOnEntry": false,
            "preLaunchTask": "npm: watch"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"port": 6010,
			"sourceMaps": true,
            "restart": true,
			"outFiles": ["${workspaceRoot}/out/server.js"]
		}
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": [
				"Launch Extension",
				"Attach to Server"
			]
		}
	]
}