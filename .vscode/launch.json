{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "antlr-debug",
            "request": "launch",
            "name": "Debug UnrealScript Grammar",
			"input": "grammars/examples/Classes/test.uc",
			"grammar": "grammars/UCGrammar.g4",
            "startRule": "program",
			"visualParseTree": true
        },
		{
			"type": "extensionHost",
			"request": "launch",
			"name": "Launch Client",
			"runtimeExecutable": "${execPath}",
			"args": ["--extensionDevelopmentPath=${workspaceRoot}"],
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/extension.js"]
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach to Server",
			"port": 6010,
			"sourceMaps": true,
			"outFiles": ["${workspaceRoot}/dist/server.js"]
		}
	],
	"compounds": [
		{
			"name": "Client + Server",
			"configurations": [
				"Launch Client",
				"Attach to Server"
			]
		}
	]
}