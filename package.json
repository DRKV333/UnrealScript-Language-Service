{
	"name": "uc",
	"displayName": "UnrealScript",
	"icon": "Icon.png",
	"description": "UnrealScript Language support",
	"author": "Eliot van Uytfanghe",
	"publisher": "EliotVU",
	"license": "MIT",
	"homepage": "http://EliotVU.com",
	"repository": {
		"url": "https://github.com/EliotVU/UnrealScript-Language-Service"
	},
	"version": "0.3.0",
	"engines": {
		"vscode": "^1.34.0"
	},
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"UC",
		"UnrealScript",
		"IntelliSense"
	],
	"activationEvents": [
		"onLanguage:unrealscript"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "UnrealScript",
			"properties": {
				"unrealscript.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				},
				"unrealscript.generation": {
					"scope": "resource",
					"type": "string",
					"enum": [
						"1",
						"2",
						"3"
					],
					"default": "3",
					"description": "The UnrealScript generation your project is written in."
				},
				"unrealscript.indexAllDocuments": {
					"scope": "window",
					"type": "boolean",
					"default": false
				},
				"unrealscript.analyzeDocuments": {
					"scope": "window",
					"type": "boolean",
					"description": "Analyzes any document, and report back \"problems\" if any.",
					"default": true
				},
				"unrealscript.checkTypes": {
					"scope": "window",
					"type": "boolean",
					"description": "Checks and reports if an expression's type is a valid one. e.g. assignments and passed arguments.",
					"default": false
				}
			}
		},
		"languages": [
			{
				"id": "unrealscript",
				"aliases": [
					"UnrealScript",
					"unrealscript"
				],
				"extensions": [
					".uc",
					".uci"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "unrealscript",
				"scopeName": "source.uc",
				"path": "./syntaxes/UnrealScript.tmLanguage.json"
			}
		],
		"iconThemes": [
			{
				"id": "unrealscript",
				"label": "UnrealScript",
				"path": "./fileicons/unrealscipt-icon-theme.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm run update-vscode && cd .. && npm run webpack",
		"webpack": "npm run clean && webpack --mode production --config ./client/webpack.config.js && webpack --mode production --config ./server/webpack.config.js",
		"compile": "tsc -b",
		"compile:grammar": "antlr4ts -visitor -no-listener grammars/UCGrammar.g4 -o server/src/antlr",
		"watch": "tsc -b -w",
		"clean": "rimraf client/out && rimraf server/out",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/node": "^12.0.10",
		"antlr4ts-cli": "^0.5.0-alpha.3",
		"gulp": "^4.0.2",
		"js-yaml": "^3.13.1",
		"merge-options": "^1.0.1",
		"rimraf": "^2.6.3",
		"ts-loader": "^6.0.4",
		"tslint": "^5.18.0",
		"typescript": "^3.5.2",
		"webpack": "^4.35.0",
		"webpack-cli": "^3.3.5"
	},
	"dependencies": {
		"antlr4ts": "^0.5.0-alpha.3"
	}
}
