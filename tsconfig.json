{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2019",
        "lib": [
            "es2019"
        ],
        "plugins": [
            {
                "name": "typescript-eslint-language-service"
            }
        ],
        "resolveJsonModule": true,
        "strict": true,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
        "downlevelIteration": true,
    },
    "references": [
        {
            "path": "./client"
        },
        {
            "path": "./server"
        }
    ],
}