{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "target": "es2021",
        "lib": [
            "es2021"
        ],
        "plugins": [
            {
                "name": "typescript-eslint-language-service"
            }
        ],
        "resolveJsonModule": true,
        "strictBindCallApply": false,
        "strictPropertyInitialization": false,
    },
    "references": [
        {
            "path": "./client"
        },
        {
            "path": "./server"
        }
    ],
}